
<div class="container">
    <div class="row">
        <div class="col s12 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
            <span class="card-title"><%= @artist_details["artist"]["name"] %></span>
            <p><%= @artist_details["artist"]["bio"]["summary"] %></p>
            </div>
            <div class="card-action">
                <a>Listeners: <%= @artist_details["artist"]["stats"]["listeners"] %></a>
                <a>PlayCount: <%= @artist_details["artist"]["stats"]["playcount"] %></a>
            </div>
        </div>
        </div>
    </div>
    <div>
    <h3>Top Tracks</h3>
    <div class="row">
        <% @artist_details["toptracks"]["track"].each do |track| %>
            <div class="col s5">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title"><%= track["name"]%></span>
                        <div class="card-action">
                            <a>Listeners: <%= track["listeners"] %></a>
                            <a>PlayCount: <%= track["playcount"] %></a>
                        </div>
                    </div>
                </div>
            </div>
        <% end %> 
    </div>

    <h3>Similar Artist</h3>
    <div class="row">
        <% @artist_details["artist"]["similar"]["artist"].each do |artist| %>
            <div class="col s5">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title"><%= artist["name"]%></span>
                    </div>
                </div>
            </div>
        <% end %> 
    </div>
</div>