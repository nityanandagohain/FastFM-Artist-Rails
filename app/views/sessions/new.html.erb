<div class="container">
<h3>Log In</h3>
<%= form_tag sessions_path do %>
  <% if flash[:alert]%>
    <%= flash[:alert] %>
  <% end %>
  <div class="validate">
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="validate">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <%= submit_tag("Log In", {class: "btn"})  %>
<% end %>
<p>Don't have an account</p>
<%= link_to "Sign Up", 'signup' %>
</div>